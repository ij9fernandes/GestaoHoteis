@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}

<div class="text-center">
    <h3>Realmente deseja excluir o contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2 col-6 mx-auto">
    
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
    
    
    <a class="btn btn-danger" role="button" asp-controller="Contato" asp-route-id="@Model.Id"asp-action="Apagar">Confirmar</a>

</div>