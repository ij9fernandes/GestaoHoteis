@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">

  <h1 class="display-4">Cadastrar Contatos</h1>

</div>

<form asp-controller="ContatoController" asp-action="Criar" method="post">

  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
  
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
  
    <label for="celular">Celular</label>
    <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato">

  </div>

  <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
  </div>

</form>